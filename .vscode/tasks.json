{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "pnpm run compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "dependsOn": [
        "watch:tsc",
        "watch:esbuild"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "watch:esbuild",
      "type": "shell",
      "command": "pnpm run watch:esbuild",
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },
    {
      "label": "watch:tsc",
      "type": "shell",
      "command": "pnpm run watch:tsc",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    }
  ]
}
