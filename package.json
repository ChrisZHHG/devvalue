{
  "name": "devvalue",
  "publisher": "ChrisZhang",
  "displayName": "devvalue",
  "description": "Measure the true cost of AI-era software engineering — human cognition + AI compute, per feature.",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisZhang/devvalue.git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devvalue.openDashboard",
        "title": "DevValue: Open Dashboard",
        "icon": "$(graph)"
      },
      {
        "command": "devvalue.startTracking",
        "title": "DevValue: Start Tracking",
        "icon": "$(play)"
      },
      {
        "command": "devvalue.stopTracking",
        "title": "DevValue: Stop Tracking",
        "icon": "$(stop)"
      },
      {
        "command": "devvalue.resetBranch",
        "title": "DevValue: Reset Branch Data",
        "icon": "$(trash)"
      },
      {
        "command": "devvalue.exportData",
        "title": "DevValue: Export Data as JSON",
        "icon": "$(export)"
      }
    ],
    "configuration": {
      "title": "DevValue",
      "properties": {
        "devvalue.hourlyRate": {
          "type": "number",
          "default": 75,
          "description": "Hourly rate in USD."
        },
        "devvalue.maxIdleTimeout": {
          "type": "number",
          "default": 300,
          "description": "Base idle timeout in seconds. Extends 4× in flow state (20 min max)."
        },
        "devvalue.flowThreshold": {
          "type": "number",
          "default": 3,
          "description": "Events per minute needed to enter flow state."
        },
        "devvalue.claudeLogGlob": {
          "type": "string",
          "default": "~/.claude/projects/*/*.jsonl",
          "description": "Glob for Claude Code session logs."
        },
        "devvalue.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show cost summary in status bar."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
